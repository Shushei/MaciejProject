{% extends 'MaciejStudyBundle:Default:Default.html.twig' %}



{% block title %}List{% endblock %}


{% block body %} 
    <table>

        {% for game in games %}
            <tr> 
                <td>
                    <a href="{{ path('gameimagelist', {'wild' : game.title})}}">{{ game.title}}</a>  
                </td>
            </tr>
        {% endfor %}
    </table>
    <b> {{ game1.title }} Gallery </b></br>
    {% if urls is empty %}
        {%for image in images %}
            {% if image.title == game1 %}
                <img src="{{asset('/uploads/gameimages/' ~ image.gameimage.filename )}}"> 
                
                
                <a href="{{path('gameimagedelete', {'wild' : image.id})}}"> Delete </a>
            {%endif%}
        {%endfor%}
    {%endif%}

{% endblock %}  