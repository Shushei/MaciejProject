{% extends 'MaciejUserBundle:Default:Default.html.twig' %}

{% set active = 'CompanyList'%}

{% block title %}List{% endblock %}


{% block body %} 
    <table>
        <tr>
            <td>Id</td>
            <td>Company Name</td>
            <td>Owner Name</td>
            <td>Owner Surname</td>
            <td>Founding Date </td>
        </tr>
        {% for company in companies %}
            <tr>
                <td> {{company.getId}} </td>
                <td> {{company.getCompany}} </td> 
                <td> {{company.getOwnername}} </td>
                <td> {{company.getOwnersurname}} </td>
                <td> {{company.getFounded.format('Y-m-d')}} </td>
                <td> 
                    {% if urls is empty %} 
                        <img src="{{asset('/uploads/companies/' ~ company.getClogo)}}"> 
                    {% else %}
                        {%for url in urls %}
                            {% if url.key == company.getClogo %} 
                                <img src="{{asset(url.url)}}"> 

                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </td>
                <td>  <a href="{{ path('usercompanysingle', {'id' : company.getId})}}">View Company</a> </td>
                
            </tr>
        {% endfor %}

    </table>



{% endblock %}  {# empty Twig template #}
