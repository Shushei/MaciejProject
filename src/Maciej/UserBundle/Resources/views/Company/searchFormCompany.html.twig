   
{% extends 'MaciejUserBundle:Default:Default.html.twig' %}
{% block body %}
      <div class="container">
 <h1 class="mt-4 mb-3">Company Search
      </h1>

      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="index.html">Lorem Ipsum</a>
        </li>
        <li class="breadcrumb-item active">Search Company . . .</li>
      </ol>
    <div class="row">
        <div class="col-md-8" id="searchdelete">
            <p id="add">
        </div>
        <div class="col-md-4">
            
            <h5 class="card-header">Search</h5>
            <div class="card-body">
              <div class="input-group">
                 {{ form_start(form) }}
                    {{ form_widget(form) }}
                
                {{ form_end(form) }}
                <button class="btn btn-primary" id="searchButton">Search</button>
            </div>
       
        </div>
    </div>
      </div>
                <script type="text/javascript">
        $("#searchButton").click(function () {
            $("#searchdelete").html("<p id='add'>");
        var size ;
        var page;
        var company = $("#search_company_searchCompany").val();
        var minDate = $("#search_company_minDate").val();
        var maxDate = $("#search_company_maxDate").val();
        criteria = {
                company: company,
                minDate: minDate,
                maxDate: maxDate}
        $(".gameRow").remove();
        $.ajax({
        method: "GET",
                url: "http://shushei.site/app_dev.php/api2/company/ajax/update",
                dataType: "json",
                contentType: "application/json",
                data: {page: page,
                        size: size,
                        criteria},
                success: function (a) {
                $("#loading").remove(); 
                $.each(a, function (key, element) {
                    var date = new Date(element.founded);
                    var day = date.getDate();
                    var month = date.getMonth() + 1;
                    var year = date.getFullYear();
                    var id = element.id;
                    var path = "{{ path('usercompanysingle', {'id' : 'element.id'})}}";
                    path = path.replace('element.id', element.id);

                    if (typeof element.clogo == 'undefined'){
                        var asset = "http://placehold.it/700x300";
                    } else {
                        var asset = element.clogo;
                    }
                    $("#add").before(
                        $("<div class=row id=game" + element.id + "></div>").html(
                            "<div class='col-md-7'>"+
                            "<img class='img-fluid rounded mb-3 mb-md-0' id=gamecompanylogo"+element.id+" src='' alt=''>"+
                            "</div><div class='col-md-5'>"+
                            "<h3>" + element.company +"</h3>"+
                            "<p>" +
                                "Company Owner:: "+ element.ownername + " "+element.ownersurname+   "</br>"+
                                "Founding date : "+year+"-"+month+"-"+day+" </br>"+
                                "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laudantium veniam exercitationem expedita laborum at voluptate. Labore, voluptates totam at aut nemo deserunt rem magni pariatur quos perspiciatis atque eveniet unde.</p>"+
                            "<a class='btn btn-primary' id=companylink" + element.id + ">View Company"+
                            "<span class='glyphicon glyphicon-chevron-right'></span>"+
                            "</a></div></div>"
                             ));
                    $("#companylink" + element.id).attr("href", path); 
                    $("#gamecompanylogo" + element.id).attr("src", asset); 
                    $("#gameimage" + element.id).attr("href", element.id);
                    });
                },
                error: function () {
                alert("There is no records matching query");
                return false;
                }
        });
        });

    </script>
    {%endblock%}
