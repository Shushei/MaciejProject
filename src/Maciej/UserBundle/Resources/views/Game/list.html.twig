{% extends 'MaciejUserBundle:Default:Default.html.twig' %}

{% set active = 'CompanyList'%}

{% block title %}List{% endblock %}


{% block body %} 
    <table>
        <tr>
            <td>Title</td>
            <td>Company name</td>
            <td> Date </td>
            <td> Logo </td>
        </tr>
        {% for game in games %}
        <tr>
            <td> {{game.title}} </td>    
            <td> {{game.company.company}} </td>
            <td> {{game.releaseDate.format('Y-m-d')}} </td>
            <td>
                {% if urls is empty %} 
                    <img src="{{asset('/uploads/logos/' ~ game.logo)}}"> 
                {% else %}
                    {%for url in urls %}
                        {% if url.key == game.logo %} 
                            <img src="{{asset(url.url)}}"> 

                        {% endif %}
                    {% endfor %}
                {% endif %}
            </td>

            <td>  <a href="{{ path('usergamesingle', {'name' : game.title})}}">View Game</a> </td>

        </tr>
       {%endfor%}

        </table>



        {% endblock %}  {# empty Twig template #}
